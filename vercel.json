{
  "installCommand": "npm install --prefix Backend && npm install --prefix client",
  "buildCommand": "npm run build --prefix client",
  "outputDirectory": "client/build",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/[...all].mjs"
    },
    {
      "source": "/:path*",
      "destination": "/index.html"
    }
  ]
}
